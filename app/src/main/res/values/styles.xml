<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="Heading" parent="Base.TextAppearance.AppCompat.Display1">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Label" parent="Base.TextAppearance.AppCompat.Large" >
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@android:color/darker_gray</item>
    </style>

    <style name="DisplayValue" parent="Base.TextAppearance.AppCompat.Large">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="SmallNote" parent="Base.TextAppearance.AppCompat.Body1" >
        <item name="android:textColor">@android:color/black</item>
    </style>

</resources>
